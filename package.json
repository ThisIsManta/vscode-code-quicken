{
    "name": "haste",
    "displayName": "Haste",
    "description": "Creates and inserts your powerful snippets.",
    "version": "0.0.1",
    "publisher": "Anantachai Saothong",
    "engines": {
        "vscode": "^1.10.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:haste"
    ],
    "main": "./dist/extension",
    "contributes": {
        "configuration": {
            "title": "Haste configurations",
            "properties": {
                "haste.files": {
                    "type": "array",
                    "items": {
                        "type": "object"
                    },
                    "default": [
                        {
                            "path": "**/*.js",
                            "code": "import ${_.startCase(fileName).replace(/\\s/g, '')} from '${filePath}';\n"
                        }
                    ]
                },
                "haste.nodes": {
                    "type": "array",
                    "items": {
                        "type": "object"
                    },
                    "default": [
                        {
                            "name": "*",
                            "code": "import ${nodeName} from '${nodeName}'\n"
                        }
                    ]
                },
                "haste.insertAt": {
                    "oneOf": [
                        "beforeFirstImport",
                        "afterLastImport",
                        "cursor"
                    ],
                    "default": "beforeFirstImport"
                }
            }
        },
        "commands": [
            {
                "command": "haste",
                "title": "Adds a file snippet quickly"
            }
        ],
        "keybindings": [
            {
                "command": "haste",
                "key": "ctrl+shift+i"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc --project ./",
        "compile": "tsc --project ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "@types/node": "^6.0.40",
        "@types/lodash": "^4.14.54",
        "@types/minimatch": "^2.0.29",
        "espree": "^3.4.0",
        "lodash": "^4.17.4",
        "minimatch": "^3.0.3",
        "typescript": "^2.0.3",
        "vscode": "^1.0.0"
    }
}