{
    "name": "haste",
    "displayName": "Haste",
    "description": "Creates and inserts your powerful snippets.",
    "version": "0.0.1",
    "publisher": "Anantachai Saothong",
    "engines": {
        "vscode": "^1.10.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:haste"
    ],
    "main": "./dist/extension",
    "contributes": {
        "configuration": {
            "title": "Haste configurations",
            "properties": {
                "haste.files": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": [
                            "path"
                        ],
                        "properties": {
                            "path": {
                                "type": "string"
                            },
                            "code": {
                                "type": [
                                    "string",
                                    "array"
                                ]
                            },
                            "when": {
                                "type": "string"
                            },
                            "omitExtensionInFilePath": {
                                "type": "string"
                            },
                            "insertAt": {
                                "enum": [
                                    "beforeFirstImport",
                                    "afterLastImport",
                                    "top",
                                    "bottom",
                                    "cursor"
                                ],
                                "default": "cursor"
                            }
                        }
                    },
                    "default": [
                        {
                            "path": "**/*.js",
                            "code": "import ${hasExportDefault ? '' : '* as '}${_.startCase(fileName).replace(/\\s/g, '')} from '${filePath}';\n",
                            "insertAt": "beforeFirstImport"
                        },
                        {
                            "path": "**/*.styl",
                            "code": "@import '${filePath}'\n",
                            "when": "fileExtn === 'styl'"
                        }
                    ]
                },
                "haste.nodes": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": [
                            "name"
                        ],
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "code": {
                                "type": [
                                    "string",
                                    "array"
                                ]
                            },
                            "insertAt": {
                                "enum": [
                                    "beforeFirstImport",
                                    "afterLastImport",
                                    "top",
                                    "bottom",
                                    "cursor"
                                ],
                                "default": "cursor"
                            }
                        }
                    },
                    "default": [
                        {
                            "name": "[addon,assert,buffer,child_process,cluster,console,crypto,dgram,dns,domain,events,fs,http,http,https,net,os,path,punycode,querystring,readline,repl,stream,string_decoder,timers,tls,tty,url,util,v8,vm,zlib]",
                            "code": "import * as ${nodeName} from '${nodeName}';\n"
                        },
                        {
                            "name": "*",
                            "code": "import ${nodeName} from '${nodeName}';\n"
                        }
                    ]
                },
                "haste.javascript.parser.plugins": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "",
                    "default": [
                        "classProperties",
                        "objectRestSpread",
                        "exportExtensions",
                        "asyncGenerators",
                        "functionBind",
                        "jsx"
                    ]
                }
            }
        },
        "commands": [
            {
                "command": "haste",
                "title": "Adds a file snippet quickly"
            }
        ],
        "keybindings": [
            {
                "command": "haste",
                "key": "ctrl+shift+i"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc --project ./",
        "compile": "tsc --project ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "@types/babylon": "^6.7.15",
        "@types/node": "^6.0.40",
        "@types/lodash": "^4.14.54",
        "@types/minimatch": "^2.0.29",
        "babylon": "^6.16.1",
        "lodash": "^4.17.4",
        "minimatch": "^3.0.3",
        "typescript": "^2.0.3",
        "vscode": "^1.0.0"
    }
}